{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"] // resolve all modules prefixed with `@/` from `src` directory
    },
    "incremental": true,
    "noImplicitAny": false,
    "esModuleInterop": true
  },
  "exclude": ["node_modules", "dist"]
}
