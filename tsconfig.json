{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "@modules/*": ["modules/*"],
      "@middlewares/*": ["middlewares/*"],
      "@guards/*": ["guards/*"],
      "@public/*": ["public/*"]
    },
    "incremental": true
  },
  "exclude": ["node_modules", "dist"]
}
